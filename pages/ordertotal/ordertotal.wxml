<view class="container">


  <!--列表list组件 需要修改-->

<view  wx:if="{{newlist.length>0}}">
    <view class="list" wx:for="{{newlist}}"  wx:key="id">
    <navigator url="../orderDetail/orderDetail?orderNo={{item.order.orderNo}}&orderStatus={{item.order.znStatus}}" >
      <view class="item-headerview">
          <view class="item-text">
          <text>订单号:{{item.order.orderNo}}</text>
          </view>
           <view class="item-text"> 
            <text class="fr">{{item.order.znStatus}}</text>
           <text class="dx-color">总价:￥{{item.order.orderTotalFee}}</text>
        </view>
      </view>
  
      <view class="item-bottom" wx:for="{{item.orderItems}}" wx:key="orderItemsId">
        <image class="img" src="https://image-shop.dxracer.com.cn/{{item.productItemImg}}" mode='scaleToFill' />
        <view class="goodsinfo">
          <text class="goodsname">{{item.productTitle}}</text>
           <text>{{item.productItemNo}}</text>
           <view class="goodsnum">数量:{{item.quantity}}</view>
        </view>
        </view>
    </navigator>
			<button  type="default" size="mini"  data-orderno="{{item.order.orderNo}}" bindtap="cancel" wx:if="{{item.order.orderStatus=='01'||item.order.orderStatus=='02'}}">取消订单</button>
				<button  type="primary"  size="mini" bindtap="quzhifu"  wx:if="{{item.order.orderStatus=='01'}}"  data-orderno="{{item.order.orderNo}}">去支付</button> 

    </view>
</view>
<view wx:else class="tips">
<text>暂时还没有任何订单哦</text>
<text class="color-dx" catchtap='goindex'> 去首页</text>
</view>
</view>