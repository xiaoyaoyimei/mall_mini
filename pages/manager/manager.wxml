<view class="main">
    <view class="form-box">
        <form bindsubmit="formSubmit">
            <input value="{{address.name}}" name="name" placeholder="昵称"/>
            <input type="number" name="phone" value="{{address.phone}}" placeholder="生日"/>
            <input name="detail" value="{{address.detail}}" placeholder="qq"/>
            <button form-type="submit">保存</button>
        </form>
    </view>
</view>
