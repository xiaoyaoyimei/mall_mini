/*头部整体样式*/

.topContainsView {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 25rpx;
  border-bottom: solid 3px #ebebeb;
}

/**
 * 商品样式
*/

.goodsImage {
  width: 240rpx;
  height: 240rpx;
}

/*右侧文本整体样式*/

.topRightView {
  width: 250px;
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
}

/*用户名称样式*/



/*时间样式*/

.topRightTime {

  color: #0099ff;
  margin-top: 10rpx;
}

/*Item样式中的图标样式 */

.headerNavImage {
  width: 30rpx;
  height: 30rpx;
}

/*Item中的文字样式*/

.headerItemText {
  font-size: 30rpx;
  color: #b8b2b2;
  margin-left: 10rpx;
  margin-top: 8rpx;
}



/*整体view样式*/

.containsView {
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  background-color: white;
  flex-direction: column;
}

/*顶部view整体样式*/

.headerView {
  z-index: 1;
  background: #fff;
  width: 100%;
  height: 72rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom:10px solid #ebebeb
}

.top-bar-item {
  display: inline-block;
  width: 25%;
  color: gray;
  text-align: center;
  font-size: 28rpx;
}

.top-bar-active {
  color: #0099ff;
  font-size: 32rpx;
}

/*每个Item样式*/

.headerNavView {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 18rpx;
}

