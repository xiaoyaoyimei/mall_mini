/*头部整体样式*/

.topContainsView {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 25rpx;
  border-bottom: solid 2px #ebebeb;
}

/**
 * 商品样式
*/

.goodsImage {
  width: 200rpx;
  height: 200rpx;
}

/*右侧文本整体样式*/

.topRightView {
  width: 250px;
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
}

/*用户名称样式*/



/*时间样式*/

.topRightTime {

  color: #0099ff;
  margin-top: 10rpx;
}

/*Item样式中的图标样式 */

.headerNavImage {
  width: 30rpx;
  height: 30rpx;
}

/*Item中的文字样式*/

.headerItemText {
  font-size: 30rpx;
  color: #b8b2b2;
  margin-left: 10rpx;
  margin-top: 8rpx;
}



/*整体view样式*/

.containsView {
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  background-color: white;
  flex-direction: column;
}

/*顶部view整体样式*/

.headerView {
  z-index: 1;
  background: #fff;
  width: 100%;
  height: 72rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom:10px solid #ebebeb
}

.top-bar-item {
  display: inline-block;
  width: 25%;
  color: gray;
  text-align: center;
  font-size: 28rpx;
}

.top-bar-active {
  color: #0099ff;
  font-size: 32rpx;
}

/*每个Item样式*/

.headerNavView {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 18rpx;
}

/*内容会被修剪，并且其余内容是不可见的。*/


.tips{
  text-align: center;
  margin-top:20rpx;
  margin-bottom:20rpx;
}
.topRightName{
  padding-right:30rpx
}
/* 搜索样式 */
.search-box {
    position: relative;
    display: flex;
    justify-content: space-between;
    padding-top: 26rpx;
}
.search-input {
    flex: 1;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 20rpx 0 54rpx;
    background: #f8f8f8;
    border-radius: 10rpx;
    font-size: 32rpx;
    border: 2rpx solid #ddd;
}

.search-icon {
    position: absolute;
    left: 15rpx;
    top: 44rpx;
    width: 35rpx;
    height: 35rpx;
}
.search-btn{
    font-size: 32rpx;
    padding: 0 20rpx;
    line-height: 64rpx;
}
.null-tips{
    padding: 200rpx 0;
    text-align: center;
    color: #787878;
}