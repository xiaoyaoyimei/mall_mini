.detail_container {
  background-color: white;
  display: flex;
  height: 100%;
  flex-direction: column;
}

scroll-view {
  background-color: white;
  height: 100%;
 
}

.detail_swiper {
  height: 720rpx;
  border-top: 0.5px solid silver;
  border-top-color: #efeff4;
  border-bottom: 0.5px solid silver;
  border-bottom-color: #efeff4;
}

swiper-item image {
  width: 100%;
  height: 720rpx;
}

.detail_title {
  font-size: 15px;
  color: black;
  padding: 10px 10px 0px 10px;
  line-height: 1.5em;
}

.detail_price {
  font-size: 17px;
  color: #dd3a40;
  padding: 10px;
  border-bottom: 10px solid silver;
  border-bottom-color: #efeff4;
}

.detail_spec {
  font-size: 15px;
  color: black;
  padding: 10px;
  border-bottom: 10px solid silver;
  border-bottom-color: #efeff4;
  line-height: 1.5em;
}

.detail_footer {
  z-index: 100;
  flex-direction: column;
  width: 100%;
  position: fixed;
  bottom: 0;
}

.detail_footer_btn {
  width: 100%;
  height: 58px;
  background-color: #0099ff;
  color: white;
  text-align: center;
  align-items: center;
  justify-content: center;
  display: flex;
}

.text-box {
  margin-bottom: 70rpx;
  padding: 40rpx 0;
  display: flex;
  min-height: 300rpx;
  background-color: #fff;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  color: #353535;
  line-height: 2em;
}

.tips {
  background-color: rgba(255, 255, 255, 0.5);
  /*opacity: 0.2;*/
  text-align: center;
  line-height: 22px;
  font-size: 18px;
  color: red;
}
.kind-list-text{
  flex: 1;
}
.kind-list-img {
  width: 60rpx;
  height: 60rpx;
}
.kind-list-item-hd {
  padding: 30rpx;
  display: flex;
  align-items: center;
  transition: opacity .3s;
}

/* 弹窗样式 */
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  overflow: hidden;
  z-index: 11;
  color: #fff;
}

.modal-dialog {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 12;
  background: #ffffff;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
.modal-content .attr_title{
  margin-bottom:20rpx;
}
.attr_value{
  border:1px solid #eee;
  padding:10rpx 16rpx;
  margin-right: 10rpx;
   margin-bottom:20rpx;
   display: inline-block;
}